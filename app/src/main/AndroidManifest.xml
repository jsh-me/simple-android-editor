<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kr.co.jsh">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="kr.co.jsh.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name=".feature.main.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="kr.co.jsh.feature.videoedit.TrimmerActivity"
            android:parentActivityName="kr.co.jsh.feature.main.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name="kr.co.jsh.feature.photoedit.PhotoActivity"
            android:parentActivityName="kr.co.jsh.feature.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".login.LoginAccountDialog"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".feature.storage.photo.PhotoStorageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.storage.video.VideoStorageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".dialog.DialogActivity"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".feature.fullscreen.VideoViewActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.VideoViewScreen" />
        <activity android:name=".feature.storage.detailPhoto.PhotoDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.storage.detailVideo.VideoDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.sendMsg.SuccessSendMsgActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>